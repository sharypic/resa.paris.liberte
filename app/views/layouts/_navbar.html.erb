<nav class="navbar navbar-default">
  <div class="container">
    <% if resident_signed_in? %>
      <h2 class='navbar-team'><%= current_resident.team.name %></h2>
    <% end %>

    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#header-collapse" aria-expanded="false">
        <span class="sr-only"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

      <%= link_to resident_signed_in? ? rooms_path : root_path, class: 'navbar-brand' do %>
        <%= image_tag 'logo/header-icon-26x34.png', title: t('.links.brand.title'), size: "26x34" %>
      <% end %>  
    </div>

    <div class="collapse navbar-collapse" id="header-collapse">
      <% if resident_signed_in? && current_resident.admin? %>
        <ul class="nav navbar-nav">
          <li><%= link_to t('.links.admin.text'), admin_teams_path, title: t('.links.admin.title') %></li>
        </ul>
      <% end %>

      <ul class="nav navbar-nav navbar-right">
        <% if resident_signed_in? %>
          <li><%= link_to t('devise.shared.links.sign_out'), destroy_resident_session_path, method: :delete %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
