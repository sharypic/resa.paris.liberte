
<ol class="breadcrumb-calendar breadcrumb">
  <% if defined?(datepicker) %>
    <li class="pull-left li-breadcrumb-calendar"><%= datepicker %></li>
  <% end %>

  <% steps.each.with_index do |step, i| %>
    <li class="<%= steps.size - 1 == i ? 'active' : '' %> ">
      <% if step[:href] %>
        <%= link_to step[:text], step[:href] %>
      <% else %>
        <%= step[:text] %>
      <% end %>
    </li>
  <% end %>

    <ul class="pull-right list-unstyled">
    </ul>
</ol>

