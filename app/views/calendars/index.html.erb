<table class="table">
  <thead>
    <tr>
      <th></th>
      <% rooms.each.with_index do |room, i| %>
        <th><%= "#{room.denomination} - #{i}" %></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% iterate_day(start_datetime, end_datetime, 30.minutes) do |step| %>
      <tr>
        <td><%= step.strftime('%H:%M') %></td>
        <% rooms.each.with_index do |room, i| %>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

