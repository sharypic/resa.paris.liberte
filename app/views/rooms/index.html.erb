<div class="row">
  <input type="text" id='js-initialize-datepicker' data-provide='datepicker' data-date-format='dd-mm-yyyy' value="<%= date.strftime('%d-%m-%Y') %>" />
</div>

<div class="row">
  <% Room.list.each.with_index do |room| %>
      <div class="col-sm-6 col-xs-12" id="test-<%= room.name %>">
        <h2 class='room-denomination'><%= room.denomination %></h2>

        <p><span class='room-seats'><%= room.seats %></span> personnes / <span class='room-cost-per-half-hour'><%= room.cost_per_half_hour %></span>â‚¬/h</p>

        <%= available_seconds_per_week(current_resident.team, room, date) %>
      </div>
  <% end %>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    var datePicker = new App.Datepicker($('#js-initialize-datepicker'), '<%= dated_rooms_path(year: ':year', month: ':month', day: ':day') %>');
    datePicker.setup();
  })
</script>
